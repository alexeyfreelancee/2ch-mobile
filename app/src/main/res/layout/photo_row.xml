<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="thumb"
            type="com.dvach_2ch.a2ch.models.Thumb" />

        <variable
            name="viewmodel"
            type="com.dvach_2ch.a2ch.ui.gallery.GalleryViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="80dp"
        android:padding="5dp"
        android:layout_height="80dp">

        <ImageView
            tools:src="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:imageUrl="@{thumb.url}" />

        <ImageView
            android:visibility="@{thumb.postfix.equals(@string/webm) || thumb.postfix.equals(@string/mp4) ? View.VISIBLE :View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_centerInParent="true"
            tools:text="WEBM" />
    </RelativeLayout>
</layout>
