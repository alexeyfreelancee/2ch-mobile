<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="post"
            type="com.example.a2ch.models.post.Post" />
        <variable
            name="viewmodel"
            type="com.example.a2ch.ui.posts.PostsViewModel" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_below="@id/name"
            android:autoLink="web"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/comment"
            tools:text="адо же, оказывается не уменя одного такая проблема правда относительно крупный проект у меня пока только 1, ну и языки"
            android:text="@{post.comment}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/photo1"
            tools:text="29/03/20 Вск 21:57:01"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@{post.date}"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:text="Anon"

            android:textColor="#000"
            ndroid:text="@{post.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:onClick="@{(view) ->viewmodel.openDialog(post.files[0].path)}"
            android:visibility="@{post.files.size() > 0 ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:id="@+id/photo1"
            android:layout_width="60dp"
            android:layout_below="@id/comment"
            android:layout_height="60dp"/>

        <ImageView
            android:onClick="@{(view) ->viewmodel.openDialog(post.files[1].path)}"
            android:visibility="@{post.files.size() > 1 ? View.VISIBLE : View.GONE}"
            android:layout_toEndOf="@id/photo1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:id="@+id/photo2"
            android:layout_width="60dp"
            android:layout_below="@id/comment"
            android:layout_height="60dp"/>

        <ImageView
            android:onClick="@{(view) ->viewmodel.openDialog(post.files[2].path)}"
            android:visibility="@{post.files.size() > 2 ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:id="@+id/photo3"
            android:layout_toEndOf="@id/photo2"
            android:layout_width="60dp"
            android:layout_below="@id/comment"
            android:layout_height="60dp"/>

        <ImageView
            android:onClick="@{(view) ->viewmodel.openDialog(post.files[3].path)}"
            android:visibility="@{post.files.size() > 3 ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/photo3"
            android:layout_marginStart="16dp"
            android:id="@+id/photo4"
            android:layout_width="60dp"
            android:layout_below="@id/comment"
            android:layout_height="60dp"/>


        <ImageView
            android:onClick="@{(view) ->viewmodel.openDialog(post.files[4].path)}"
            android:visibility="@{post.files.size() > 4 ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/photo4"
            android:layout_marginStart="16dp"
            android:id="@+id/photo5"
            android:layout_width="60dp"
            android:layout_below="@id/comment"
            android:layout_height="60dp"/>

        <View
            android:background="#000"
            android:layout_below="@id/date"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"/>

    </RelativeLayout>
</layout>
