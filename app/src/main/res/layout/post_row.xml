<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="post"
            type="com.example.a2ch.models.post.Post" />
        <variable
            name="viewmodel"
            type="com.example.a2ch.ui.posts.PostsViewModel" />
    </data>

    <RelativeLayout

        android:background="@color/backgroundColor"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_alignParentStart="true"
                android:layout_below="@id/num"
                android:linksClickable="true"
                android:autoLink="web"
                android:visibility="@{post.comment.empty ? View.GONE : View.VISIBLE}"
                android:layout_alignParentEnd="true"
                android:id="@+id/comment"
                tools:text="Hадо же, оказывается не уменя одного такая проблема правда относительно крупный проект у меня пока только 1, ну и языки"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/name"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/num"
                tools:text="29/03/20 Вск 21:57:01"

                android:text="@{post.date}"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/name"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                tools:text="#dkfjasldkfja"
                android:text="@{'#' + post.num}"
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/name"

                tools:text="Anon"
                android:visibility="@{post.name.empty ? View.GONE : View.VISIBLE}"
                android:textColor="#000"
                app:html="@{post.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:imageUrl="@{post.files[0].path}"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,0)}"
                android:visibility="@{post.files.size() > 0 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo1"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                app:imageUrl="@{post.files[1].path}"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,1)}"
                android:visibility="@{post.files.size() > 1 ? View.VISIBLE : View.GONE}"
                android:layout_toEndOf="@id/photo1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:id="@+id/photo2"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                app:imageUrl="@{post.files[2].path}"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,2)}"
                android:visibility="@{post.files.size() > 2 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:id="@+id/photo3"
                android:layout_toEndOf="@id/photo2"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                app:imageUrl="@{post.files[3].path}"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,3)}"
                android:visibility="@{post.files.size() > 3 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/photo3"
                android:layout_marginStart="16dp"
                android:id="@+id/photo4"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>


            <ImageView
                app:imageUrl="@{post.files[4].path}"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,0)}"
                android:visibility="@{post.files.size() > 4 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo5"
                android:layout_marginEnd="16dp"
                android:layout_width="60dp"
                android:layout_below="@id/photo1"
                android:layout_height="60dp"/>

            <ImageView
                app:imageUrl="@{post.files[5].path}"
                android:layout_toEndOf="@id/photo5"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,0)}"
                android:visibility="@{post.files.size() > 5 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo6"
                android:layout_width="60dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/photo1"
                android:layout_height="60dp"/>

            <ImageView
                app:imageUrl="@{post.files[6].path}"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,0)}"
                android:visibility="@{post.files.size() > 6 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo7"
                android:layout_width="60dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/photo6"
                android:layout_below="@id/photo1"
                android:layout_height="60dp"/>

            <ImageView
                app:imageUrl="@{post.files[7].path}"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openContentDialog(post,0)}"
                android:visibility="@{post.files.size() > 7 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/photo7"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo8"
                android:layout_marginEnd="16dp"
                android:layout_width="60dp"
                android:layout_below="@id/photo1"
                android:layout_height="60dp"/>
        </RelativeLayout>


        <View
            android:layout_marginTop="16dp"
            android:background="#000"
           android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"/>

    </RelativeLayout>
</layout>
