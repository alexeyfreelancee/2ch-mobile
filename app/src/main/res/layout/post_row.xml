<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
   >
    <data>
        <import type="android.view.View"/>
        <variable
            name="post"
            type="com.example.a2ch.models.post.Post" />
        <variable
            name="viewmodel"
            type="com.example.a2ch.ui.posts.PostsViewModel" />
    </data>

    <RelativeLayout

        android:background="@color/backgroundColor"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="@{post.parent.empty ? View.GONE : View.VISIBLE}"
                android:text='@{String.format("%s %s",@string/parent, post.parent)}'
                android:background="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:onClick="@{(view) -> viewmodel.openPostDialog(post.parent)}"
                tools:text=">>32541235"
                android:id="@+id/parent"
                android:layout_below="@id/num"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_alignParentStart="true"

                android:layout_below="@id/parent"
                android:visibility="@{post.comment.empty ? View.GONE : View.VISIBLE}"
                android:autoLink="web"
                android:layout_alignParentEnd="true"
                android:id="@+id/comment"
                tools:text="Hадо же, оказывается не уменя одного такая проблема правда относительно крупный проект у меня пока только 1, ну и языки"
                android:text="@{post.comment}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/name"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/num"
                tools:text="29/03/20 Вск 21:57:01"

                android:text="@{post.date}"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/name"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                tools:text="#dkfjasldkfja"

                android:text="@{'#' + post.num}"
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/name"

                tools:text="Anon"
                android:visibility="@{post.name.empty ? View.GONE : View.VISIBLE}"
                android:textColor="#000"
                android:text="@{post.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openPhotoDialog(post.files[0].path)}"
                android:visibility="@{post.files.size() > 0 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/photo1"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"

                android:onClick="@{(view) ->viewmodel.openPhotoDialog(post.files[1].path)}"
                android:visibility="@{post.files.size() > 1 ? View.VISIBLE : View.GONE}"
                android:layout_toEndOf="@id/photo1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:id="@+id/photo2"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openPhotoDialog(post.files[2].path)}"
                android:visibility="@{post.files.size() > 2 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:id="@+id/photo3"
                android:layout_toEndOf="@id/photo2"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>

            <ImageView
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:onClick="@{(view) ->viewmodel.openPhotoDialog(post.files[3].path)}"
                android:visibility="@{post.files.size() > 3 ? View.VISIBLE : View.GONE}"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/photo3"
                android:layout_marginStart="16dp"
                android:id="@+id/photo4"
                android:layout_width="60dp"
                android:layout_below="@id/comment"
                android:layout_height="60dp"/>
        </RelativeLayout>


        <View
            android:layout_marginTop="16dp"
            android:background="#000"
           android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"/>

    </RelativeLayout>
</layout>
