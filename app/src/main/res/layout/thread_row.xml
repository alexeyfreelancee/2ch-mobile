<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="thread"
            type="com.alexey_vena.a2ch.models.threads.ThreadPost" />

        <variable
            name="viewmodel"
            type="com.alexey_vena.a2ch.ui.threads.ThreadsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:background="?attr/selectableItemBackground"
        android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <RelativeLayout
            android:clickable="true"

            android:focusable="true"
            android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:imageUrl="@{thread.files[0].thumbnail}"
                android:background="@android:color/darker_gray"
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
                android:visibility="@{thread.files.empty ? View.GONE : View.VISIBLE}"
                android:scaleType="centerCrop"
                android:id="@+id/thread_photo"
                android:layout_width="50dp"
                android:layout_marginEnd="8dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:textAlignment="viewStart"
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
                android:gravity="start"
                android:layout_toEndOf="@id/thread_photo"
                android:textSize="18sp"
                android:visibility="@{thread.subject.empty  ? View.GONE : View.VISIBLE}"
                android:textColor="#000"
                tools:text="Anon"
                android:paddingEnd="16dp"
                android:paddingStart="8dp"
                android:maxLines="1"
                app:html="@{thread.subject}"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:layout_toEndOf="@id/thread_photo"
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
                android:layout_below="@id/name"
                android:maxLines="5"

                tools:text=";ldjfklsdjf;aslkdfj"
                android:layout_alignParentEnd="true"
                android:paddingEnd="16dp"
                android:paddingStart="8dp"
                android:id="@+id/comment"
                app:html="@{thread.comment}"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />


            <View
                android:visibility="@{thread.comment.empty ? View.GONE : View.VISIBLE}"
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
               android:layout_toEndOf="@id/thread_photo"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:id="@+id/view"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/comment"
                android:layout_height="0.25dp" />

            <TextView
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
                android:layout_marginTop="5dp"
                android:layout_below="@id/view"
                android:layout_marginEnd="16dp"
                tools:text="20 20 20"
                android:layout_alignParentEnd="true"
                android:id="@+id/date"
               app:date="@{thread.timestamp}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:onClick="@{(view) -> viewmodel.startPostsActivity(thread.num)}"
                android:layout_toStartOf="@id/date"
                android:layout_marginTop="5dp"
                android:layout_below="@id/view"

                android:layout_marginEnd="16dp"
                tools:text="20 постов"
                android:id="@+id/replies"
                android:text='@{String.format("%s %s",thread.postsCount, @string/posts)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
